{
  "$schema": "https://json.schemastore.org/package",
  "name": "substrack",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "cd apps/browser && bun run build",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "bun tests/data/seed.ts",
    "db:studio": "drizzle-kit studio",
    "dev": "cd apps/browser && bun run dev",
    "lint": "bunx @biomejs/biome check --write --unsafe ."
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@clerk/clerk-sdk-node": "^5.1.6",
    "@clerk/nextjs": "^6.37.3",
    "@neondatabase/serverless": "^1.0.2",
    "@types/nodemailer": "^6.4.22",
    "arktype": "^2.1.29",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.43.1",
    "drizzle-seed": "^0.3.1",
    "nodemailer": "^7.0.13",
    "svix": "^1.84.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/bun": "^1.3.8",
    "@types/node": "^22.19.9",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
