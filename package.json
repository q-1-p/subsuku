{
  "$schema": "https://json.schemastore.org/package",
  "name": "substrack",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun run --cwd apps/browser build",
    "db:generate": "dotenvx run -- drizzle-kit generate",
    "db:migrate": "dotenvx run -- drizzle-kit migrate",
    "db:push": "dotenvx run -- drizzle-kit push",
    "db:seed": "dotenvx run -- bun tests/data/seed.ts",
    "db:studio": "dotenvx run -- drizzle-kit studio",
    "dev": "dotenvx run -- bun run --cwd apps/browser dev",
    "lint": "bunx @biomejs/biome check --write --unsafe ."
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@types/nodemailer": "^6.4.22",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.43.1",
    "drizzle-seed": "^0.3.1",
    "nodemailer": "^7.0.13",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/bun": "^1.3.8",
    "@types/node": "^22.19.9",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
